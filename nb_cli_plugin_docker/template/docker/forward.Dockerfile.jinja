{% from "docker/_helpers.Dockerfile.jinja" import requirements_stage, reverse_config -%}
# syntax=docker/dockerfile:1

{{ requirements_stage(python_version, build_backend) }}

FROM python:{{ python_version }}

WORKDIR /app

ENV TZ Asia/Shanghai
ENV PYTHONPATH=/app

COPY --from=requirements_stage {% if build_backend %}/tmp/requirements.txt {% endif %}/tmp/bot.py /app

{% if build_backend %}
RUN pip install --no-cache-dir -r /tmp/requirements.txt
{% endif %}

COPY . /app/

CMD ["python", "bot.py"]
